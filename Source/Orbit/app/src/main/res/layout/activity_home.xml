<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.orbit.orbit.activities.HomeActivity">

    <GridLayout
        android:columnCount="3"
        android:rowCount="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout">
        <ImageButton
            android:id="@+id/firstIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:src="@drawable/menu_logout" />

        <ImageButton
            android:id="@+id/secondIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:src="@drawable/menu_school" />

        <ImageButton
            android:id="@+id/thirdIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:src="@drawable/menu_view_teachers" />

        <ImageButton
            android:id="@+id/fourthIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:src="@drawable/menu_link_parent_student" />

        <ImageButton
            android:id="@+id/fifthIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:src="@drawable/menu_link_parent_student" />

        <ImageButton
            android:id="@+id/sixthIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:src="@drawable/menu_link_parent_student" />

        <ImageButton
            android:id="@+id/seventhIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:src="@drawable/menu_link_parent_student" />

        <ImageButton
            android:id="@+id/eighthIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:src="@drawable/menu_link_parent_student" />

        <ImageButton
            android:id="@+id/ninthIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:src="@drawable/menu_link_parent_student" />
    </GridLayout>

</RelativeLayout>